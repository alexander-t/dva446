<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">

    <title>Squeak</title>
<body>
{{> top}}
<div class="container">
    <h4>Squeaks</h4>
    {{#squeaks}}
    <div class="card mb-2">
        <div class="card-header">
            {{name}}
            <span class="float-right">{{time}}</span>
        </div>
        <div class="card-body">
            <p class="card-text">{{squeak}}</p>
        </div>
    </div>
    {{/squeaks}}
    <hr/>
    <h4>Squeals</h4>
    {{#squeals}}
    <div class="card mb-2">
        <div class="card-header">
            {{name}}
            <span class="float-right">{{time}}</span>
        </div>
        <div class="card-body">
            <p class="card-text">{{squeak}}</p>
        </div>
    </div>
    {{/squeals}}

</div>
<!-- Optional JavaScript -->
<script src="js/jquery-3.4.1.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/squeak.js"></script>
</body>
</html>
