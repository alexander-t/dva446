<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <h5 class="my-0 mr-md-auto font-weight-normal">Squeak!</h5>

    <form class="form-inline w-75 mt-2 mt-md-0" method="POST" action="squeak">
        <div class="input-group mr-sm-2 w-75">
            <div class="input-group-prepend">
                <div class="input-group-text">{{name}}</div>
            </div>
            <input type="text" name="squeak" class="form-control" id="squeaktext">
            <div class="input-group-append">
                <select class="custom-select" name="recipient" id="recipient">
                    <option value="all" selected="">@ Everyone</option>
                    {{#users}}
                    <option value="{{.}}">@ {{.}}</option>
                    {{/users}}
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mr-sm-2 disabled">Squeak!</button>
    </form>

    <form class="form-inline mt-2 mt-md-0">
        <button type="button" class="btn btn-primary" onclick="signout(this)">Sign out</button>
    </form>
</div>
